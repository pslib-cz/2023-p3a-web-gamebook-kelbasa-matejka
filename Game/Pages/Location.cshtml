@page
@using Game.Services;
@model Game.Pages.Location

@{
    Layout = null;
    
}

<div>
    <h1>@Model.lModel.Name</h1>
    <p>@Model.lModel.Description</p>
    <img style="display: block;" width="500" src="Assets/@Model.lModel.Background"/>
    @foreach(var v in Model.lModel.Connections)
    {
        <div>
            <p>@v.Description <a asp-page="Location" asp-route-id="@v.ToLocationID">-></a></p>
        </div>   
    }
</div>
